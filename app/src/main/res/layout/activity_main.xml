<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/i_burger"
            android:textAlignment="center"
            android:background="@color/red"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/myImageView"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/p1" />

        <TextView
            android:id="@+id/title_text_view0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/e_burger"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@color/red"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/layout_placeholder9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dbrown"
                    android:text="Yess!" />

                <RadioButton
                    android:id="@+id/radio_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dbrown"
                    android:text="Noo" />
            </RadioGroup>
        </LinearLayout>

        <TextView
            android:id="@+id/response_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text=""
            android:textColor="@color/dbrown"
            android:textSize="16sp" />



        <Spinner
            android:id="@+id/preference_spinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:fontFamily="serif"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            android:textColor="@color/dbrown"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/recommendation_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/dbrown"/>



        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:layoutDirection="ltr"
            android:padding="16dp"
            android:rowCount="3">

            <!-- First Item -->
            <LinearLayout
                android:id="@+id/layout_classic"
                android:layout_width="0dp"
                android:layout_height="182dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_classic"
                    android:layout_width="wrap_content"
                    android:layout_height="169dp"
                    android:src="@drawable/p3" />

                <TextView
                    android:id="@+id/title_classic"
                    android:layout_width="166dp"
                    android:layout_height="42dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:text="The Classic" />
            </LinearLayout>

            <!-- Second Item -->
            <LinearLayout
                android:id="@+id/layout_notclassic"
                android:layout_width="0dp"
                android:layout_height="189dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_notclassic"
                    android:layout_width="wrap_content"
                    android:layout_height="157dp"
                    android:src="@drawable/p4" />

                <TextView
                    android:id="@+id/title_notclassic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stingy Burger" />
            </LinearLayout>

            <!-- Third Item -->
            <LinearLayout
                android:id="@+id/layout_schicken"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_schicken"
                    android:layout_width="wrap_content"
                    android:layout_height="169dp"
                    android:src="@drawable/p5" />

                <TextView
                    android:id="@+id/title_schicken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Simple Chicken" />
            </LinearLayout>

            <!-- Fourth Item -->
            <LinearLayout
                android:id="@+id/layout_zinger"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_zinger"
                    android:layout_width="wrap_content"
                    android:layout_height="172dp"
                    android:src="@drawable/p6" />

                <TextView
                    android:id="@+id/title_zinger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chickenery Zinger" />
            </LinearLayout>

            <!-- Fifth Item -->
            <LinearLayout
                android:id="@+id/layout_nomeat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_nomeat"
                    android:layout_width="wrap_content"
                    android:layout_height="172dp"
                    android:src="@drawable/p7" />

                <TextView
                    android:id="@+id/title_nomeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Meat No Greet" />
            </LinearLayout>

            <!-- Sixth Item -->
            <LinearLayout
                android:id="@+id/layout_falafel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_falafel"
                    android:layout_width="wrap_content"
                    android:layout_height="172dp"
                    android:src="@drawable/p8" />

                <TextView
                    android:id="@+id/text_falafel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Da Falafel Burger" />
            </LinearLayout>
        </GridLayout>



