        <Button
            android:id="@+id/finalize_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Finalize Choices"
            android:textColor="@color/white"
            android:backgroundTint="@color/red"
            android:onClick="onClickFinalize" />

        <!-- Add a new TextView to display the responses below the button -->
        <TextView
            android:id="@+id/new_response_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/dbrown"
            android:textSize="16sp"
            android:visibility="gone" />



    </LinearLayout>
</ScrollView>
